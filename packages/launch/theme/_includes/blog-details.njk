<!doctype html>
<html lang="en">

  <head>
    {% include 'partials/head-content.njk' %}
  </head>

  <body layout="blog-details">
    {% include 'partials/header.njk' %}

    <div id="content-wrapper">
      <div class="content-area">
        <rocket-drawer id="sidebar">
          <nav slot="content" id="sidebar-nav">
            {% include 'partials/logoLink.njk' %}
            <rocket-navigation>
              <ul>
                <li class="current">
                  <h3>Headings</h3>
                  {{ collections[section] | rocketPageAnchors({ title: title }) | rocketNavToHtml({
                      listItemClass: "menu-item",
                      activeListItemClass: "current",
                      activeKey: eleventyNavigation.key
                  }) | safe }}
                </li>
              </ul>
              <div class="sidebar-tags">
                <h3>Date</h3>
                <div>{{ page.date.toDateString() }}</div>
              </div>
              <div class="sidebar-tags">
                <h3>Tags</h3>
                <div class="tags">
                  {% for tag in tags %}
                    <span class="tag">{{tag}}</span>
                  {% endfor %}
                </div>
              </div>
              {% include 'partials/mobile-sidebar-bottom.njk' %}
            </rocket-navigation>
          </nav>
        </rocket-drawer>
        <main class="markdown-body">
          {% if cover_image %}
            <img src="{{ cover_image | url }}" alt="">
          {% endif %}
          {% include 'partials/addTitleHeadline.njk' %}

          {{ content.html | safe }}

          {% include 'partials/previousNext.njk' %}
          <div class="content-footer">
            <p>
              Caught a mistake or want to improve the blog?
              <a href="https://github.com/modernweb-dev/web/edit/master/{{ page.inputPath }}">Edit this blog post on GitHub!</a>
            </p>
          </div>
        </main>
      </div>
    </div>

    {% include 'partials/footer.njk' %}

    {% include 'partials/pageJs.njk' %}
    {% include 'partials/mobileNavigationJs.njk' %}
  </body>
</html>
