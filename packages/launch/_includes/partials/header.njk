<header>
  <div class="content-area">
    <button id="mobile-menu-trigger">
      <span>Show Menu</span>
      {{ '/_assets/burger-menu.svg' | themePath | inlineSvgUrl | safe }}
    </button>
    {% include 'partials/logoLink.njk' %}
    {%- for entry in collections.header %}
      <a href="{{ entry.url | url }}" class="
              {% if entry.url == page.url %} current {% endif %}
              {% if (page.url.search(entry.url) !== -1) and (page.url !== '/') %} active {% endif %}
            ">{{ entry.data.eleventyNavigation.key }}</a>
    {%- endfor %}
    <a id="github-link" href="{{ site.githubUrl }}" aria-label="{{ site.name }} on GitHub" rel="noopener noreferrer" target="_blank">
      <span>Github</span>
      {{ '/_assets/github-logo.svg' | themePath | inlineSvgUrl | safe }}
    </a>
  </div>
</header>
